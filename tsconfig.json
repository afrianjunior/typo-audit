{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declarationDir": "dist/types",
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "lib": [
    "es2016",
    "dom"
  ]
}